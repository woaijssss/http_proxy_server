#include <string.h>
#include <iostream>
#include <errno.h>
#include <stdio.h>
#include <signal.h>

#include "WHPSHttpServer.h"

using namespace std;

WHPSHttpServer* p_server = NULL;

void sigHandler(int sig)
{
        if (p_server)
        {
                p_server->stop();
        }

        exit(0);
}

int main(int argc, char const *argv[])
{
        signal(SIGUSR1, sigHandler);
        signal(SIGUSR2, sigHandler);
        signal(SIGINT, sigHandler); 
        signal(SIGPIPE, SIG_IGN);

        // p_server = WHPSTcpServer::Get();
        WHPSHttpServer& server_ptr = GetWHPSHttpServer();
        p_server = &server_ptr;

        server_ptr.start();

        return 0;
}

#include <stdlib.h>
#include <sstream>
#include <iomanip>

#include "util.h"

using namespace std;

void exitService(int status)
{
        exit(status);
}

void delayMs(const unsigned int& ms)
{
        const timespec ts = {0, ms};
        nanosleep(&ts, NULL);        // 线程级别的睡眠（毫秒级）
}

string getHexString(unsigned char* s, const int& len)
{
        std::ostringstream out;
        out << std::hex << std::setw(2) << std::setfill('0');

        for (int i = 0; i < len; i++) {
                out << std::hex << std::setw(2) << std::setfill('0') << static_cast<int>(s[i]) << " ";
        }

        return out.str();
}
