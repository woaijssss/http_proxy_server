
#include <iostream>

using namespace std;

class Abstract
{
public:
        virtual ~Abstract() {}
        virtual void foo() = 0;
};

class Basic: public Abstract
{
public:
        Basic() {}
        virtual ~Basic() {}

        // 重写父类方法
        virtual void foo()
        {
                cout << "Basic::foo" << endl;
        }
};

// 写成类的原因是函数内部可以定义类，不能定义函数
#define GETCLASS(__x) \
        class N \
        { \
        public: \
                static Abstract* create() \
                { \
                        cout << #__x << endl; \
                        return (new __x()); \
                } \
        };

void func(string className)
{
        GETCLASS(Basic)         // 写在这里的目的，是为了运行期实例化，而不是编译期
        Abstract* p = N::create();
        p->foo();
}

int main()
{
        func("Basic");
        return 0;
}