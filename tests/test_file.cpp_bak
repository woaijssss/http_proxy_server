
#include <iostream>
#include <string>  
#include <fstream>  
#include <sstream>

using namespace std;

void load(const string& filename, string& f_buff)
{
        std::ifstream t(filename);  
        std::stringstream buffer;  
        buffer << t.rdbuf();  

        f_buff = buffer.str();
}

int main()
{
        string f_buff;
        load("/home/wenhan/server/webResource/html/index.html", f_buff);

        cout << f_buff << endl;

        return 0;
}